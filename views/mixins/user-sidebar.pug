include ../mixins/sidebar

mixin user-sidebar(collapse)
  +sidebar(collapse)
    a.sidebar__link(href="/dashboard" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Dashboard")
      li.sidebar__item
        i.fas.fa-columns.mr-3.sidebar__icon
        span.sidebar__text Dashboard
    a.sidebar__link(href="/profile" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Profile")
      li.sidebar__item
        i.fas.fa-user.mr-3.sidebar__icon
        span.sidebar__text Profile
    a.sidebar__link(href="/support" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Support")
      li.sidebar__item
        i.fas.fa-life-ring.mr-3.sidebar__icon
        span.sidebar__text Support
    a.sidebar__link(href="/logout" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Log Out")
      li.sidebar__item
        i.fas.fa-power-off.mr-3.sidebar__icon
        span.sidebar__text Log Out
    block sidebar