include ../mixins/navigation

mixin company-navigation()
  +navigation(firstName=user.firstName)
    a.navigation__link(href="/dashboard" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Dashboard")
      li.navigation__item
        i.fa-fw.fas.fa-columns.mr-3.navigation__icon
        span.navigation__text Dashboard

    a.navigation__link(href="/profile" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Profile Profile")
      li.navigation__item
        i.fa-fw.fas.fa-user.mr-3.navigation__icon
        span.navigation__text Employee Profile

    a.navigation__link(href="/company" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Company Profile")
      li.navigation__item
        i.fa-fw.fas.fa-users.mr-3.navigation__icon
        span.navigation__text Company Profile

    //- Only for company admins 
    if user.admin
      a.navigation__link(href="/billing" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Billing")
        li.navigation__item
          i.fa-fw.fas.fa-credit-card.mr-3.navigation__icon
          span.navigation__text Billing

    a.navigation__link(href="/support" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Support")
      li.navigation__item
        i.fa-fw.fas.fa-life-ring.mr-3.navigation__icon
        span.navigation__text Support

    a.navigation__link(href="/logout" data-toggle=(collapse ? "tooltip" : "") data-placement="right" title="Log Out")
      li.navigation__item
        i.fa-fw.fas.fa-power-off.mr-3.navigation__icon
        span.navigation__text Log Out
    block navigation